
.uni-list-cell {
	background-color: #ffffff;
	margin: 15rpx 0;
	border-top: 1rpx solid #eee;
	border-bottom: 1rpx solid #eee;
}
.uni-list-cell:first-child {
	margin-top: 20rpx;
}
.uni-list {
	background-color: #F8F8F8;
	height: 100%;
	min-height: 400rpx;
}
.uni-media-list-body {
	width: 100%;
	padding: 10rpx 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-bottom: 1rpx dotted #ddd;
}
.tail-name {
	width: 100rpx;
	text-align: left;
	font-size: 36rpx;
	line-height: 80rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.flex-box {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.tail-detail {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.tail-train-type {
	margin-top: 10rpx;
	width: 30rpx;
	height: 30rpx;
	background-color: #007AFF;
	color: #ffffff;
	font-size: 24rpx;
	border-radius: 4rpx;
	text-align: center;
	line-height: 30rpx;
}
.arrival-icon {
	width: 160rpx;
	height: 54rpx;
	margin: 0 auto;
	display: block;
	opacity: 0.6;
}
.arrival-time {
	width: 100%;
	text-align: center;
	font-size: 20rpx;
	color: #999;
}
.trainName {
	font-size: 32rpx;
	line-height: 48rpx;
	margin-left: 10rpx;
}
.train-time {
	font-size: 28rpx;
	color: #66afff;
}
.seat-box {
	width: 750rpx;
	padding: 20rpx;
	overflow: hidden;
}
.seat-list {
	font-size: 24rpx;
	line-height: 36rpx;
	width: 33%;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	float: left;
}
.gray-color {
	color: #aaa;
}
.green-color {
	color: #3ed686;
}

