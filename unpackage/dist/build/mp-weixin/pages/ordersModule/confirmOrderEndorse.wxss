
.page {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	background-color: #F8F8F8;
	padding-top: 70rpx;
	overflow: hidden;
}
.ticket-box {
	background-color: #ffffff;
	width: 100%;
	padding: 10rpx 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-bottom: 1rpx dotted #ddd;
}
.tail-name {
	font-size: 30rpx;
	line-height: 48rpx;
}
.flex-box {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	padding: 0 10rpx;
	text-align: center;
}
.tail-detail {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.tail-train-type {
	margin-top: 10rpx;
	width: 30rpx;
	height: 30rpx;
	background-color: #007AFF;
	color: #ffffff;
	font-size: 24rpx;
	border-radius: 4rpx;
	text-align: center;
	line-height: 30rpx;
}
.arrival-icon {
	width: 200rpx;
	height: 20rpx;
	margin: -10rpx auto 0;
	display: block;
	opacity: 0.6;
}
.arrival-time {
	width: 100%;
	text-align: center;
	font-size: 20rpx;
	color: #999;
}
.trainName {
	font-size: 32rpx;
	line-height: 48rpx;
	margin-left: 10rpx;
}
.train-time {
	font-size: 28rpx;
	color: #66afff;
}
.seat-box {
	width: 750rpx;
	padding: 20rpx;
	overflow: hidden;
	background-color: #ffffff;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.seat-list {
	font-size: 24rpx;
	line-height: 32rpx;
	width: 33%;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	float: left;
	text-align: center;
	padding: 12rpx 0;
}
.seat-list-active {
	background-color: #007AFF;
	color: #ffffff !important;
	border-radius: 16rpx;
}
.seat-list-active .seat-price {
	color: #ffffff;
}
.seat-name {
	font-size: 26rpx;
}
.seat-price {
	color: #666666;
}
.gray-color {
	color: #aaa;
}
.green-color {
	color: #aced6d;
}
.tail-btn {
	background-color: #007AFF !important;
	width: 710rpx;
	margin: 40rpx auto 0;
}

