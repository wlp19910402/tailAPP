
.page {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	min-height: 100%;
	background-color: #F8F8F8;
}
.please-pay-header {
	background-color: #007AFF;
	width: 100%;
	height: 60rpx;
	line-height: 60rpx;
	padding-bottom: 20rpx;
}
.please-pay-header-icon {
	width: 30rpx;
	height: 40rpx;
	padding-left: 30rpx;
	vertical-align: middle;
	margin-right: 20rpx;
}
.please-pay-header-text {
	font-weight: 300;
	line-height: 60rpx;
	color: #ffffff;
}
.please-pay-price {
	background-color: #ffffff;
	width: 100%;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding: 0 30rpx;
	height: 140rpx;
	line-height: 140rpx;
}
.floatLeft {
	float: left;
}
.floatRight {
	float: right;
}
.please-pay-price .floatLeft {
	font-weight: 300;
}
.please-pay-price .floatRight {
	color: #ff9000;
}
.payment-method-title {
	width: 100%;
	padding-left: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	line-height: 120rpx;
	height: 120rpx;
}
.payment-method-box {
	width: 100%;
	overflow: hidden;
}
.payment-method-list {
	width: 50%;
	border: 1rpx solid #f8f8f8;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	height: 140rpx;
	background-color: #FFFFFF;
	line-height: 140rpx;
	padding-left: 30rpx;
	float: left;
	position: relative;
	overflow: hidden;
}
.payment-method-icon {
	width: 40rpx;
	height: 40rpx;
	vertical-align: middle;
	margin-right: 20rpx;
}
.payment-method-name {
	font-size: 36rpx;
	font-weight: 300;
}
.payment-method-list-acitve {
	border: 1rpx solid #007AFF;
}
.active-icon {
	position: absolute;
	width: 140rpx;
	height: 90rpx;
	right: 0;
	top: 0;
	display: none;
}
.payment-method-list-acitve .active-icon {
	display: block;
}
.tail-btn {
	background-color: #007AFF !important;
	width: 710rpx;
	margin: 40rpx auto;
}

